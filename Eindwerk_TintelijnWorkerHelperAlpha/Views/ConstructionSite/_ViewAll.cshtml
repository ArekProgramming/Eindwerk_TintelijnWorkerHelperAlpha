@model IEnumerable<Eindwerk_TintelijnWorkerHelperAlpha.Models.ConstructionSite>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.StreetName) /
                @Html.DisplayNameFor(model => model.Address.HouseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.PostalCode) /
                @Html.DisplayNameFor(model => model.Address.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "ConstructionSite",null, Context.Request.Scheme)','New Site')" class="btn btn-success text-white"><i class="fas fa-home"></i> New Site</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ConstructionSiteId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ConstructionSiteId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ConstructionSiteId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
